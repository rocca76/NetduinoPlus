<Window x:Class="NetduinoBridgeWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525" Closing="Window_Closing">
    <Grid>
        <Button Content="Open" Height="23" HorizontalAlignment="Left" Margin="21,12,0,0" Name="buttonOpen" VerticalAlignment="Top" Width="75" Click="buttonOpen_Click" />
        <Button Content="Stop" Height="23" HorizontalAlignment="Left" Margin="21,51,0,0" Name="buttonStop" VerticalAlignment="Top" Width="75" Click="buttonStop_Click" />
        <Button Content="Close" Height="23" HorizontalAlignment="Left" Margin="21,90,0,0" Name="buttonClose" VerticalAlignment="Top" Width="75" Click="buttonClose_Click" />
    </Grid>
</Window>
